{
  "name": "monochromatic",
  "private": true,
  "author": {
    "name": "Aquaticat",
    "email": "an@aquati.cat",
    "url": "https://aquati.cat"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aquaticat/Monochromatic.git"
  },
  "trustedDependencies": [
    "sharp",
    "dprint",
    "esbuild",
    "husky"
  ],
  "scripts": {
    "data-prepare": "husky || echo 'husky does not exist, skipped'",
    "preinstall": "npx only-allow pnpm",
    "//w:test-slow": "# vitest is too slow when run in watch mode inside pnpm run wr. Disabled Vitest in pnpm run wr by adding the hyphen character. Suggestion: Run vitest separately or in your IDE.",
    "w:test-slow": "vitest watch",
    "b:test": "vitest run",
    "w:bench-slow": "vitest bench",
    "b:bench-slow": "vitest bench --run",
    "//b:lint_eslint": "# eslint is indeed already ran by the IDE, but we want a complete view of all errors too.",
    "b:lint_eslint": "eslint-p --cache",
    "b:format_eslint": "eslint-p --cache --fix",
    "b:lint_stylelint": "stylelint --ignore-path .gitignore \"**/*.{css,astro,html}\"",
    "b:format_stylelint": "stylelint --ignore-path .gitignore --fix \"**/*.{css,astro,html}\"",
    "b:lint_dprint": "dprint check --list-different",
    "b:format_dprint": "dprint fmt",
    "wr": "pnpm run -r --parallel --stream \"/^w:\\w+$/\"",
    "br": "pnpm run -r --stream \"/^b:\\w+$/\""
  },
  "engines": {
    "bun": ">=1.2.9",
    "node": ">=24.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@monochromatic-dev/config-dprint": "workspace:*",
    "@monochromatic-dev/config-vite": "workspace:*",
    "@monochromatic-dev/config-typescript": "workspace:*",
    "@monochromatic-dev/config-stylelint": "workspace:*",
    "dprint": "catalog:",
    "husky": "catalog:",
    "oxlint": "catalog:",
    "stylelint": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "vite": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/ui": "catalog:",
    "playwright": "catalog:",
    "vue-tsc": "catalog:",
    "postcss-html": "catalog:",
    "@types/bun": "catalog:",
    "nano-spawn": "catalog:",
    "execa": "catalog:",
    "eslint": "catalog:",
    "@monochromatic-dev/config-eslint": "workspace:*",
    "@moonrepo/cli": "catalog:"
  },
  "workspaces": [
    "packages/*/*"
  ],
  "os": [
    "linux",
    "darwin",
    "win32",
    "current"
  ],
  "cpu": [
    "x64",
    "arm64",
    "current"
  ],
  "libc": [
    "glibc",
    "musl",
    "current"
  ]
}
