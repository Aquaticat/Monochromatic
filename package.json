{
  "name": "monochromatic",
  "private": true,
  "author": {
    "name": "Aquaticat",
    "email": "an@aquati.cat",
    "url": "https://aquati.cat"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aquaticat/Monochromatic.git"
  },
  "trustedDependencies": [
    "sharp",
    "dprint",
    "esbuild",
    "husky"
  ],
  "scripts": {
    "data-prepare": "husky || echo 'husky does not exist, skipped'",
    "preinstall": "npx only-allow pnpm",
    "//w:test-slow": "# vitest is too slow when run in watch mode inside pnpm run wr. Disabled Vitest in pnpm run wr by adding the hyphen character. Suggestion: Run vitest separately or in your IDE.",
    "w:test-slow": "vitest watch",
    "b:test": "vitest run",
    "w:bench-slow": "vitest bench",
    "b:bench-slow": "vitest bench --run",
    "//w:lint_eslint": "# eslint is indeed already ran by the IDE, but we want a complete view of all errors too.",
    "w:lint_eslint": "eslint-p",
    "wr": "pnpm run -r --parallel --stream \"/^w:\\w+$/\"",
    "br": "pnpm run -r --stream \"/^b:\\w+$/\""
  },
  "engines": {
    "bun": ">=1.2.9"
  },
  "type": "module",
  "devDependencies": {
    "@monochromatic-dev/config-dprint": "workspace:*",
    "@monochromatic-dev/config-vite": "workspace:*",
    "@monochromatic-dev/config-typescript": "workspace:*",
    "@monochromatic-dev/config-stylelint": "workspace:*",
    "dprint": "catalog:",
    "husky": "catalog:",
    "oxlint": "catalog:",
    "stylelint": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "vue-tsc": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "@vitest/browser": "catalog:",
    "playwright": "catalog:",
    "vite": "catalog:",
    "@types/bun": "catalog:",
    "nano-spawn": "catalog:",
    "execa": "catalog:",
    "eslint-p": "catalog:",
    "eslint": "catalog:",
    "@monochromatic-dev/config-eslint": "workspace:*"
  },
  "workspaces": [
    "packages/*/*"
  ],
  "os": [
    "linux",
    "darwin",
    "win32",
    "current"
  ],
  "cpu": [
    "x64",
    "arm64",
    "current"
  ],
  "libc": [
    "glibc",
    "musl",
    "current"
  ]
}
