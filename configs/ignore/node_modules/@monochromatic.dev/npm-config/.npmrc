# https://gist.github.com/Aquaticat/a6570831a0e0a6ca2c86919b54b3c4d9

# https://docs.npmjs.com/cli/v9/configuring-npm/npmrc
# https://docs.npmjs.com/cli/v9/using-npm/config

foreground-scripts=true

init-license="AGPL-3.0-or-later"
init-version="0.0.1"

loglevel="info"

logs-max=32

long=true

message="build: bump version to %s"

sign-git-commit=true

sign-git-tag=true

unicode=false

# https://pnpm.io/npmrc

hoist=false

public-hoist-pattern[]=*electron*

lockfile-include-tarball-url=true

use-lockfile-v6=true

auto-install-peers=true

# Revert pnpm 8 configuration update.
resolution-mode="highest"

always-auth=true
