root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
indent_size = 4

[*.html]
trim_trailing_whitespace = unset

[*.json]
# Because inserting a final line in json files doesn't make it easier to add another entry.
# Also because I don't want to inserting a final line manually again after changing the json file programmatically.
insert_final_newline = false
