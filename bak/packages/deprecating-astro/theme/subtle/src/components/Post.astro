---
import PrettyDate from './PrettyDate.astro';
const { post, } = Astro.props;
---

<li class='Post a'>
  <a
    class='overlay'
    href={post.url}>{post.frontmatter.title}</a>
  <div class='Post__content'>
    <h2>{post.frontmatter.title}</h2>
    <p class='Post__description'>{post.frontmatter.description}</p>
    <p class='Post__summary'>{post.frontmatter.summary}</p>
    <aside>
      <ul class='Post__tags'>
        {
          post.frontmatter.tags.map((tag,) => (
            <li class='Post__tag'>
              <a href={`/tag/${tag}`}>
                <span>{tag}</span>
              </a>
            </li>
          ))
        }
      </ul>
      <span class='date'>
        <PrettyDate date={post.frontmatter.published}></PrettyDate>
        -
        <PrettyDate date={post.frontmatter.updated}></PrettyDate>
      </span>
    </aside>
  </div>
</li>
