---
import { getCollection } from "astro:content";

  const postEntries = await getCollection('post',);
  console.dir(postEntries);

  // FIXME: this.
const years = Array.from(postEntries.values(),).flat().flatMap(
  post => [post.data.published[0].date.getFullYear(), post.data.modified![0].date.getFullYear(),],
);

const earliestYear = Math.min(...years,);
const latestYear = Math.max(...years,);
---

<span class='existence-period'>
  <time datetime={earliestYear.toString()}>{earliestYear}</time>
  -
  <time datetime={latestYear.toString()}>{latestYear}</time>
</span>
