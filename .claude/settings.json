{
  "permissions": {
    "allow": [
      "Bash(git --no-pager diff CLAUDE.md moon.yml)",
      "Bash(cat:*)",
      "Bash(export:*)",
      "Bash(brew install:*)",
      "Bash(hx:*)",
      "Bash(brew postinstall:*)",
      "Bash(brew list:*)",
      "Bash(brew uses:*)",
      "Bash(ldd:*)",
      "Bash(sudo ls:*)",
      "mcp__github__get_file_contents",
      "mcp__github__list_branches"
    ],
    "deny": [
      "Edit",
      "WebFetch",
      "WebSearch",
      "NotebookEdit",
      "Bash(cd:*)"
    ]
  }
}
