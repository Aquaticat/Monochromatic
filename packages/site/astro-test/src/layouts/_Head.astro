---
import './_Head.css';
import { i18n } from '@_/index.ts';
interface Props {
  title: string;
  lang: string;
}
const { title, lang } = Astro.props;
---
<head>
  <meta charset='utf-8'>
  <meta
    name='viewport'
    content='width=device-width, initial-scale=1'>
  <link
    rel='icon'
    href='/favicon.svg'
    type='image/svg+xml'>
  <title>{title} | {i18n.get('siteName')!.get(lang)!}</title>
  <script src='./_Head.ts'></script>
</head>
