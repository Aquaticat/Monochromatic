---
import Post from '@_/components/Post.astro';
import type { Post as PostType } from '@_/index.ts';

interface Props {
  posts: PostType[];
  lang: string;
}
const { posts, lang } = Astro.props;
---

<style>
.Posts {
  display: grid;

  grid-template-columns: repeat(auto-fit, minmax(calc(var(--min-text) * var(--rp)), 1fr));

  column-gap: calc(var(--gap-xxl) * var(--rp));

  row-gap: calc(var(--gap-xxl) * var(--rp));

  inline-size: 100%;
}
</style>
<ul class='Posts'>
  {
    posts.map((
      post,
    ) => (
      <Post
        {post}
        {lang}
      />
    ))
  }
</ul>
