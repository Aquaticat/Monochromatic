---
import { i18n } from '@_/index.ts';
import { langs } from '@_/index.ts';
import Html from '@_/layouts/Html.astro';
import {
  capitalizeString,
  unary,
} from '@monochromatic-dev/module-es';
const title = Array
  .from(i18n.get('chooseALang')!.values(), unary(capitalizeString))
  .join(
    ' ',
  );
---
<Html
  {title}
  lang='en'>
  <main>
    <h1>{title}</h1>
    <ul>
      {
        langs.map((lang) => (
          <li>
            <a href={`/${lang}`}>{lang}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Html>
