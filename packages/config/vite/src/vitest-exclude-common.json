{
  "patterns": [
    "**/{node_modules,bak}/**",
    "**/.{idea,git,cache,output,temp}/**",
    "packages/*/*/**/src/**/*.js",
    "**/*.d.ts",
    "**/*.shared.ts",
    "**/*.index.ts",
    "**/index.ts",
    "**/logtape.*.ts",
    "**/fixture.*.ts",
    "**/moon.*.ts",
    "**/theme/subtle/**",
    "**/deprecated.*.ts",
    "packages/site/**/*"
  ],
  "coverageAdditionalPatterns": [
    "**/cli.*.ts",
    "**/dom.*.ts",
    "**/*.browser.ts",
    "**/*.browser.test.ts",
    "**/astro-*.ts"
  ],
  "ignoredExtensions": [".cjs", ".js", ".mjs"],
  "pathReplacements": [
    { "pattern": "${cwd}/", "replacement": " " },
    { "pattern": "packages/", "replacement": " " },
    { "pattern": "/src", "replacement": " " }
  ]
}
