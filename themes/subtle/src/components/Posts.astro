---
import Post from './Post.astro';
import {langsPosts} from './_globs.astro';
import { DEFAULT_LANG } from '../consts';
const lang = Astro.currentLocale!;
const posts = Astro.props.posts || langsPosts.get(lang === DEFAULT_LANG ? '' : lang);
---

<ul class="Posts">
  {
    posts.map((post) => (
      <Post post={post}></Post>
    ))
  }
</ul>
